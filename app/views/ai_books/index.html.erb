<p id="notice"><%= notice %></p>

<h1>Ai Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Page count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ai_books.each do |ai_book| %>
      <tr>
        <td><%= ai_book.name %></td>
        <td><%= ai_book.summary %></td>
        <td><%= ai_book.page_count %></td>
        <td><%= link_to 'Show', ai_book %></td>
        <td><%= link_to 'Edit', edit_ai_book_path(ai_book) %></td>
        <td><%= link_to 'Destroy', ai_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ai Book', new_ai_book_path %>
